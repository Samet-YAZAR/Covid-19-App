<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/rule_bullet"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_baseline_label_important_24"
        app:tint="@color/teal_200"
        android:contentDescription="@string/icon" />

    <TextView
        android:id="@+id/rule_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginHorizontal="6dp"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="@+id/rule_bullet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rule_bullet"
        app:layout_constraintTop_toTopOf="@+id/rule_bullet" />


</androidx.constraintlayout.widget.ConstraintLayout>